  qcdjet->SetLineColor(42);
  qcdjet->SetFillColor(42);
  cosmicjet->SetLineColor(1);
  cosmicjet->SetFillColor(kGreen);
  halojet->SetLineColor(1);
  halojet->SetFillColor(12);
  /*
    zeejet->SetLineColor(1);
